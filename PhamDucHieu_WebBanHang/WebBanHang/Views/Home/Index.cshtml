        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">SẢN PHẨM ĐƯỢC ĐỀ XUẤT</h4>
        </header>

        <div class="row row-sm">
            @foreach (var item in Model.ListProduct.Where( n => n.TypeId == 3))
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div class="card card-sm card-product-grid">
                        <a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="img-wrap"> <img src="~/Content/images/product/product_recommended/@item.Avartar"> </a>
                        <figcaption class="info-wrap">
                            <center><a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="title">@item.ProductName</a></center>
                            <div class="price mt-1"><center>@item.Price VNĐ</center></div> <!-- price-wrap.// -->
                        </figcaption>
                    </div>
                </div> 
            }

        </div> <!-- row.// -->
    </section>
