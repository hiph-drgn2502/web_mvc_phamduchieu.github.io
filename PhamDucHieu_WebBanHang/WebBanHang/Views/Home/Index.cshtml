@model WebBanHang.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <nav class="nav-home-aside">
                            <h6 class="title-category">Danh mục <i class="d-md-none icon fa fa-chevron-down"></i></h6>
                            <ul class="menu-category">
                                @foreach (var item in Model.ListCategory)
                                {
                                    <li>@Html.ActionLink(@item.CategoryName, "ProductCategory", "Category", new { @Id = item.Id }, null)</li>
                                }
                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/banners/slider1.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slider2.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slider3.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                            @foreach (var item in Model.ListCategory.Where(n => n.ShowOnHomePage == true).Take(3))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@item.CategoryName</h6>
                                        <a href="@Url.Action("ProductCategory","Category", new { Id=item.Id})" class="btn btn-secondary btn-sm">Mua ngay</a>
                                    </div>
                                    <img src="~/Content/images/category/@item.Avartar" height="80" class="img-bg">
                                </div>
                            }
                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Giảm giá sốc</h3>
                    <mark><i>Sale up to 20% all product</i></mark>
                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">04</span> <small>Days</small></div>
                    <div> <span class="num">12</span> <small>Hours</small></div>
                    <div> <span class="num">58</span> <small>Min</small></div>
                    <div> <span class="num">02</span> <small>Sec</small></div>
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 2))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="img-wrap">
                                <img src="~/Content/images/product/sale_product/@item.Avartar">
                            </a>
                            <div class="text-wrap p-3">
                                <a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="title">@item.ProductName</a>
                                <span class="badge badge-danger"> -20% </span>
                            </div>
                        </figure>
                    </div> <!-- col.// -->
                }

            </div>
        </div>

    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">SẢN PHẨM CHÍNH</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Sản phẩm nổi bật của TOTO</h5>
                        <p>Nổi bật trong các sản phẩm của TOTOSHOP chính là dòng sản phẩm áo khoác thời trang đa dạng về mẫu mã lẫn chất liệu. Đối với TOTOSHOP, Freestyle là phong cách của sự tự do, năng động và cá tính.</p>
                        <a href="#" class="btn btn-outline-primary rounded-pill">Xem ngay</a>
                        <img src="~/Content/images/product/product_brand/spthuonghieu1.jpg" class="img-bg">
                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.BrandId == 2).Take(8))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="item">
                                    <div class="card-body">
                                        <h6 class="title">@item.ShortDes</h6>
                                        <img class="img-sm float-right" src="~/Content/images/product/product_brand/@item.Avartar">
                                        <p class="text-muted">@item.ProductName</p>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <!-- =============== SECTION 2 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">PHỤ KIỆN</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Phụ kiện giúp bạn nổi bật hơnn</h5>
                        <p>Là một GenZ sành điệu, đừng nên bỏ qua những phụ kiện dưới đây nhé!</p>
                        <a href="#" class="btn btn-outline-primary rounded-pill">Xem ngay</a>
                        <img src="~/Content/images/product/phukien/phukien7.jpg" class="img-bg">
                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.BrandId == 3))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="item">
                                    <div class="card-body">
                                        <h6 class="title">@item.ShortDes</h6>
                                        <img class="img-sm float-right" src="~/Content/images/product/phukien/@item.Avartar">
                                        <p class="text-muted">@item.ProductName</p>
                                    </div>
                                </a>
                            </li>
                        }


                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 2 END =============== -->
    <!-- =============== SECTION REQUEST =============== -->

    <section class="padding-bottom">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">YÊU CẦU BÁO GIÁ</h4>
        </header>

        <div class="row">
            <div class="col-md-8">
                <div class="card-banner banner-quote overlay-gradient" style="background-image: url('images/banners/banner9.jpg');">
                    <div class="card-img-overlay white">
                        <h3 class="card-title">HÃY GỬI YÊU CẦU ĐẾN CHO CHÚNG TÔI</h3>
                        <p class="card-text" style="max-width: 400px">
                            Nếu bạn muốn biết giá thành của bất cứ sản phẩm của chúng tôi xin vui lòng điền vào mẫu bên!
                        </p>
                        <a href="" class="btn btn-primary rounded-pill">Xem thêm</a>
                    </div>
                </div>
            </div> <!-- col // -->
            <div class="col-md-4">

                <div class="card card-body">
                    <h4 class="title py-3">Sản phẩm mà bạn cần</h4>
                    <form>
                        <div class="form-group">
                            <input class="form-control" name="" placeholder="Bạn đang muốn tìm thứ gì?" type="text">
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input class="form-control" placeholder="Số lượng" name="" type="text">

                                <select class="custom-select form-control">
                                    <option>Cái</option>
                                    <option>Chiếc</option>
                                    <option>Tấn</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group text-muted">
                            <p>Chọn loại mẫu:</p>
                            <label class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" value="option1">
                                <span class="form-check-label">Yêu cầu báo giá</span>
                            </label>
                            <label class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" value="option2">
                                <span class="form-check-label">Yêu cầu một ví dụ</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-warning">Gửi yêu cầu đến nhà cung cấp</button>
                        </div>
                    </form>
                </div>

            </div> <!-- col // -->
        </div> <!-- row // -->
    </section>

    <!-- =============== SECTION REQUEST .//END =============== -->
    <!-- =============== SECTION ITEMS =============== -->
